{
  "name": "@megascore/hardhat",
  "version": "1.0.0",
  "type": "module",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@types/node": "^22.8.5",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.9",
    "typescript": "~5.8.0",
    "viem": "^2.30.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  },
    "scripts": {
    "typecheck": "tsc --noEmit",
    "compile": "hardhat build",
    "test": "hardhat test",
    "test:solidity": "hardhat test solidity",
    "test:nodejs": "hardhat test nodejs",
    "dev": "hardhat node",
    "deploy:local": "hardhat ignition deploy ignition/modules/MegaScore.ts --network hardhat",
    "deploy:testnet": "hardhat ignition deploy ignition/modules/MegaScore.ts --network megaethTestnet",
    "send:eth": "hardhat run scripts/send-eth.ts --network hardhat",
    "abi:export": "hardhat run scripts/export-abi.ts",
    "addresses:export": "hardhat run scripts/export-addresses.ts --network hardhat"
  }
}